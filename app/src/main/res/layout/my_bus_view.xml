<?xml version="1.0" encoding="utf-8"?>
<!-- This XML layout defines a ConstraintLayout with a TextView and an ImageView -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FEFE00"
    android:layout_height="wrap_content">

    <!-- TextView for displaying bus name -->
    <TextView
        android:id="@+id/bus_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginVertical="16dp"
        android:text="Bus"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#FEFE00"
        app:layout_constraintVertical_bias="0.555"/>

    <!-- ImageView for managing the schedule with a calendar icon -->
    <ImageView
        android:id="@+id/manage_schedule"
        android:layout_width="18dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/baseline_calendar_month_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.589"
        app:tint="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>
